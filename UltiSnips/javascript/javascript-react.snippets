import React, { useEffect } from 'react';
import Chart from 'echarts-for-react';

const MultipleLineChart = () => {
  let chartRef = null;

  const chartOption = () => {
    const testData = [
      ['product', '用电高峰', '用电低谷'],
      ['1号充电桩', 43.3, 85.8],
      ['2号充电桩', 83.1, 73.4],
      ['3号充电桩', 86.4, 65.2],
      ['4号充电桩', 72.4, 53.9],
      ['5号充电桩', 72.4, 53.9]
    ];

    return {
      animationDuration: 100,
      animationDurationUpdate: 1000,
      legend: {
        itemHeight: 2,
        itemWidth: 40,
        right: 100,
        itemGap: 40,
        textStyle: {
          color: '#95A6A5',
          fontSize: 34,
          padding: [0, 0, 0, 10]
        }
      },
      tooltip: {},
      dataset: {
        source: testData
      },
      xAxis: { 
        type: 'category',
        axisTick: {
          show: false
        },
        axisLabel: {
          fontSize: 34,
          color: '#95A6A5',
          interval: 0,
          margin: 30
        }
      },
      yAxis: {
        axisLine: {
          show: false
        },
        axisLabel: {
          fontSize: 34,
          color: '#95A6A5',
          margin: 30
        },
        splitLine: {
          lineStyle: {
            color: '#27484C',
            width: 2
          }
        }
      },
      series: [
        {
          type: 'bar',
          barWidth: 16,
          itemStyle: {
            color: '#E02020'
          }
        },
        {
          type: 'bar',
          barWidth: 16,
          itemStyle: {
            color: '#0091FF'
          }
        },
      ],
    };
  };

  useEffect(() => {
    setInterval(() => {
      if (chartRef) {
        chartRef.getEchartsInstance().clear();
        chartRef.getEchartsInstance().setOption(chartOption());
      }
    }, 10000);
  }, []);

  return (
    <div style={{ width: '1050px', height: '500px', margin: '0 auto', position: 'relative' }}>
      <div style={{
        position: 'absolute',
        color: '#95A6A5',
          fontSize: 34,
          left: '24px'
      }}>kW</div>
      <Chart style={{ height: '100%' }} ref={(e) => (chartRef = e)} option={chartOption()} />
    </div>
  );
};

export default MultipleBarChart;
endsnippet

